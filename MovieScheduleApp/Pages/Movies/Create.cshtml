@page
@model MovieScheduleApp.Pages.Movies.CreateModel
@{
    ViewData["Title"] = "Create Movie";
}

<h2>Create Movie</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Movie.Title"></label>
        <input asp-for="Movie.Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Movie.Director"></label>
        <input asp-for="Movie.Director" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Movie.Genre"></label>
        <input asp-for="Movie.Genre" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Movie.Description"></label>
        <textarea asp-for="Movie.Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Movie.Showtimes"></label>
        <input asp-for="Movie.Showtimes" class="form-control" placeholder="Enter showtimes separated by commas" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

<a asp-page="/Movies/Index">Back to list</a>
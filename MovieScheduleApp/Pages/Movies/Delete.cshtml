@page "{id:int}"
@model MovieScheduleApp.Pages.Movies.DeleteModel
@{
    ViewData["Title"] = "Delete Movie";
}

<h2>Delete Movie</h2>

<h3>Are you sure you want to delete this movie?</h3>
<div>
    <h4>@Model.Movie.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Movie.Title
        </dd>
        <dt class="col-sm-2">
            Director
        </dt>
        <dd class="col-sm-10">
            @Model.Movie.Director
        </dd>
        <dt class="col-sm-2">
            Genre
        </dt>
        <dd class="col-sm-10">
            @Model.Movie.Genre
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Movie.Description
        </dd>
        <dt class="col-sm-2">
            Showtimes
        </dt>
        <dd class="col-sm-10">
            @string.Join(", ", Model.Movie.Showtimes.Select(s => s.StartTime.ToString("g") + " - " + s.Location))
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Movie.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
